{
  "name": "novel-downloader",
  "version": "6.0.0",
  "description": "An scalable universal novel downloader.",
  "repository": "https://github.com/404-novel-project/novel-downloader.git",
  "author": "bgme <i@bgme.me>",
  "license": "AGPL-3.0-or-later",
  "packageManager": "yarn@4.1.1",
  "private": true,
  "type": "module",
  "sideEffects": [
    "*.vue"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "run-s build:js build:misc",
    "build:nopack": "run-s build:js build:misc:nopack",
    "build:dev": "NODE_ENV=development run-s build:js build:misc",
    "build:doc": "cd src/ && tsc --project ./tsconfig.json --declaration --outDir ../dist/ --declarationDir ../dist/ && cd ../ && api-extractor run --local --verbose --typescript-compiler-folder ./node_modules/typescript --diagnostics && cd dist && api-documenter markdown",
    "watch": "webpack watch --mode development -c webpack/*.config.js",
    "build:js": "webpack build -c webpack/*.config.js",
    "build:misc": "node build_misc.js",
    "build:misc:nopack": "NO_PACK=true node build_misc.js",
    "clean": "[ -e dist ] && rm -r dist || echo 'dist folder not exists.'",
    "lint": "eslint ./src/**/*.ts ./src/**/*.vue",
    "lint:web-ext": "web-ext lint --source-dir dist/firefox",
    "tsx:debug": "tsx --inspect",
    "dev": "NODE_ENV=development run-s clean build:misc watch",
    "run:firefox": "web-ext run -s dist/firefox",
    "run:chromium": "web-ext run -s dist/chromium -t chromium",
    "ci:prepare": "run-s format:check lint clean",
    "ci": "run-s ci:prepare build:nopack lint:web-ext build:misc",
    "ci:doc": "run-s ci:prepare build:doc",
    "commit": "cz",
    "release": "standard-version"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix",
    "*.vue": "eslint --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.24.1",
    "@microsoft/api-documenter": "^7.24.0",
    "@microsoft/api-extractor": "^7.42.3",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/file-saver": "^2.0.7",
    "@types/pug": "^2.0.10",
    "@types/serviceworker": "^0.0.84",
    "@types/uuid": "^9.0.8",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "babel-loader": "^9.1.3",
    "commitizen": "^4.3.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.23.0",
    "fs-extra": "^11.2.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "license-webpack-plugin": "^4.0.2",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.8.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "pug": "^3.0.2",
    "pug-plugin": "4.9.9",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.8.5",
    "vue-loader": "^17.4.2",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.16",
    "web-ext": "^7.11.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@mozilla/readability": "^0.5.0",
    "@vueuse/core": "^10.9.0",
    "@xmldom/xmldom": "^0.8.10",
    "crypto-es": "^2.1.0",
    "element-plus": "^2.6.1",
    "escape-string-regexp": "^5.0.0",
    "fflate": "^0.8.2",
    "file-saver": "^2.0.5",
    "filenamify": "^6.0.0",
    "linkedom": "^0.16.10",
    "loglevel": "^1.9.1",
    "opentype.js": "^1.3.4",
    "path-browserify": "^1.0.1",
    "pinia": "^2.1.7",
    "queue": "^7.0.0",
    "tap-esm": "^3.0.0",
    "uuid": "^9.0.1",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "wawoff2": "^2.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
